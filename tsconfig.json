{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
